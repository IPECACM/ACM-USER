    <LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    tools:context=".student_dashbord"
    android:background="@drawable/student_dashboard_background"

    android:orientation="vertical"
        android:layout_height="match_parent"

        >

    <androidx.drawerlayout.widget.DrawerLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/drawer"
        tools:openDrawer="start"

        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#0342cf"
                app:title="Navigation drawer menu"
                app:titleTextColor="@color/white" />

            <LinearLayout


                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".student_dashbord">

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="120dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/normal_profile"
                        android:layout_width="350dp"
                        android:layout_height="151dp"
                        android:layout_marginHorizontal="30dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="160dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/profile"
                            app:civ_border_color="@color/black"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/show_name"
                            android:layout_width="285dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp"
                            android:fontFamily="@font/lato_black"
                            android:text=" "
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="#82838a"
                            android:textSize="18sp" />


                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/edit_profile"
                        android:layout_width="165dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color_50"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/shopping_ing_background"
                                android:padding="25dp"
                                android:src="@drawable/ic_baseline_group_24"
                                app:tint="#3f609c" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_black"
                                android:text="Edit Profile"
                                android:textAlignment="center"
                                android:textColor="#82838a"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_4"
                        android:layout_width="165dp"
                        android:layout_height="160dp"

                        android:layout_margin="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"

                        app:cardElevation="10dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color_50"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/bills_img_background"
                                android:padding="25dp"
                                android:src="@drawable/invoice"
                                app:tint="#3f609c" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lato_black"
                                android:text="Your Sig's"
                                android:textAlignment="center"
                                android:textColor="#82838a"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/profile_photo"
                        android:layout_width="165dp"
                        android:layout_height="160dp"
                        android:layout_margin="20dp"
                        android:clickable="true"
                        android:focusable="true"

                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/white"

                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color_50"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/general_img_background"
                                android:padding="25dp"
                                android:src="@drawable/ic_baseline_camera"
                                app:tint="#3f609c" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="1dp"
                                android:fontFamily="@font/lato_black"

                                android:text="Upload Profile Photo"
                                android:textColor="#82838a"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/butonform"
                        android:layout_width="165dp"
                        android:layout_height="160dp"
                        android:layout_margin="18dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">


                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background_color_50"
                            android:gravity="center"

                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_margin="20dp"
                                android:background="@drawable/transport_ing_background"
                                android:padding="25dp"
                                android:src="@drawable/ic_baseline_library_books_24"
                                app:tint="#3f609c" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/lato_black"
                                android:text="SIG Registrations"
                                android:textAlignment="center"
                                android:textColor="#82838a"
                                android:textSize="15dp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/navmenu"
            app:menu="@menu/iconmenu"
            app:itemIconTint="#0342cf"
            android:backgroundTint="@color/white"
            app:itemTextColor="@color/black"
            app:headerLayout="@layout/navheader"
            android:layout_gravity="start"
            />
    </androidx.drawerlayout.widget.DrawerLayout>


