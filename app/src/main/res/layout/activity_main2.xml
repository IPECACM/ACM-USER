<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity2">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_1"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:clickable="true"
            android:elevation="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold|italic"
                    android:text="Want to know more about us!!" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/acm_removebg_preview" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:background="@color/lawn_green">
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:clickable="true"
            android:layout_marginRight="25dp"
            android:elevation="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/info_text2"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="18dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textSize="18dp"
                    android:textStyle="bold|italic"
                    android:text="our dearest faculties" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/teacher" />
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:background="@color/purple">
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_3"
        android:clickable="true"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:elevation="50dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/info_text3"
                android:layout_width="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold|italic"
                android:text="acm team" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/team" />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:background="@color/yellow"/>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_4"
            android:clickable="true"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:elevation="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="64dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="45dp"
                        android:layout_height="40dp"
                        android:background="@drawable/circle_green"
                        app:srcCompat="@drawable/ic_notice" />
                    <TextView
                        android:id="@+id/info_text4"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="45dp"
                        android:layout_height="wrap_content"
                        android:textAllCaps="true"
                        android:textStyle="bold|italic"
                        android:text="notices" />
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:background="@color/sienna"/>

                </LinearLayout>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_5"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:clickable="true"
            android:elevation="50dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">

                <TextView
                    android:id="@+id/info_text5"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold|italic"
                    android:text="Our memories!!" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/photo_album" />

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="10dp"
                        android:background="@color/lawn_green">
                    </LinearLayout>

                </LinearLayout>




            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>