                android:checked="false"
                android:text="SIG SOFT"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/rb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="SIG GRAPH + SIG WEB"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/rb4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:checked="false"
                android:text="SIG FOUNDATION"
                android:textSize="20dp" />
        </RadioGroup>

